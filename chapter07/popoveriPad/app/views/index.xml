<Alloy>
	<NavigationWindow>
		<Window class="detail">
			<View id="quantity" class="popoverArea">
				<Label class="popoverLabel">数量</Label>
				<TextField id="quantityField" class="popoverTextField" onClick="popoverQuantity"></TextField>
			</View>
			<View id="productName" class="popoverArea">
				<Label class="popoverLabel">商品名</Label>
				<TextField id="nameField"  class="popoverTextField" onClick="popoverName"></TextField>
			</View>
			<View id="productDate" class="popoverArea">
				<Label class="popoverLabel">日付</Label>
				<TextField id="dateField"  class="popoverTextField" onClick="popoverDate"></TextField>
			</View>
		</Window>
	</NavigationWindow>
</Alloy>