<Alloy>
	<SplitWindow>
		
		<NavigationWindow id="masterNav">
			<Window id="master">
				<Label>施設一覧</Label>
				<!-- 施設一覧 -->
			</Window>
		</NavigationWindow>
		
		<NavigationWindow id="detailNav">
			<Window id="detail">

				<Module id="mapview" module="ti.map" method="createView">
				</Module>
				<Toolbar platform="ios" id="mapToolBar">
					<Items>
						<FlexSpace/>
						<Button id="deleteMap" class="itemButton" onClick="deleteMap">全削除</Button>
						<FlexSpace/>
						<Button id="satellite" class="itemButton" onClick="changeMap"></Button>
						<FlexSpace/>
						<Button id="standard" class="itemButton" onClick="changeMap"></Button>
						<FlexSpace/>
						<Button id="hybrid" class="itemButton" onClick="changeMap"></Button>
						<FlexSpace/>
						<Button id="zoomin" class="itemButton" onClick="changeMap"></Button>
						<FlexSpace/>
						<Button id="zoomout" class="itemButton" onClick="changeMap"></Button>
						<FlexSpace/>
					</Items>
				</Toolbar>
			</Window>

		</NavigationWindow>

	</SplitWindow>

</Alloy>